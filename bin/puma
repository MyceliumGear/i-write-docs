#!/usr/bin/env ruby
#
# The application 'puma' is installed as part of a gem, and
# this file is here to facilitate running it.
#

require_relative '../config/boot'
require 'puma/cli'

begin
  cli = Puma::CLI.new ARGV
  cli.run
rescue => e
  raise e if $DEBUG
  STDERR.puts e.message
  STDERR.puts e.backtrace.join("\n")
  exit 1
end
