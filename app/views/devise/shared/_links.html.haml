%ul.deviseMenu

  - if controller_name != 'sessions'
    %li= link_to I18n.t('log_in', scope: 'devise.shared'), new_session_path(resource_name)

  - if devise_mapping.registerable? && controller_name != 'registrations'
    %li= link_to I18n.t('sign_up', scope: 'devise.shared'), new_registration_path(resource_name)

  - if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations'
    %li= link_to I18n.t('forgot_password', scope: 'devise.shared'), new_password_path(resource_name)

  %br

  - if devise_mapping.confirmable? && controller_name != 'confirmations'
    %li= link_to I18n.t('confirmation_instructions', scope: 'devise.shared'), new_confirmation_path(resource_name)

  - if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks'
    %li= link_to I18n.t('unlock_instructions', scope: 'devise.shared'), new_unlock_path(resource_name)

  - if devise_mapping.omniauthable?
    - resource_class.omniauth_providers.each do |provider|
      %li= link_to I18n.t('sign_id_with', scope: 'devise.shared', provider: provider.to_s.titleize), omniauth_authorize_path(resource_name, provider)
  %br
    %li= locale_selector
