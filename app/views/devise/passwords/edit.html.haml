- @page_title = I18n.t('page_title', scope: 'devise.passwords.edit')

.page

  .formBlock

    %h2= I18n.t('page_title', scope: 'devise.passwords.edit')

    = simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f|
      = f.error_notification
      = f.full_error :reset_password_token
      = hidden_field_tag 'user[reset_password_token]', params[:reset_password_token]
      .form-inputs
        = f.input :password, label: I18n.t('new_password', scope: 'devise.passwords.edit'), required: true, autofocus: true
        = f.input :password_confirmation, label: I18n.t('confirmation', scope: 'devise.passwords.edit'), required: true
      .form-actions
        = f.button :submit, I18n.t('submit', scope: 'devise.passwords.edit'), class: 'onDark'


= render "devise/shared/links"
