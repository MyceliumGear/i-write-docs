- @page_title = t('devise.passwords.edit.page_title')

.page

  .formBlock

    %h2= t('devise.passwords.edit.page_title')

    = simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f|
      = f.error_notification
      = f.full_error :reset_password_token
      = hidden_field_tag 'user[reset_password_token]', params[:reset_password_token]
      .form-inputs
        = f.input :password, label: t('devise.passwords.edit.new_password'), required: true, autofocus: true
        = f.input :password_confirmation, label: t('devise.passwords.edit.confirmation'), required: true
      .form-actions
        = f.button :submit, t('devise.passwords.edit.submit'), class: 'onDark'


= render "devise/shared/links"
