%h2= @page_title = "Edit your account"

= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
  = f.error_notification
  .form-inputs
    = f.input :name
    = f.input :email, required: true, autofocus: true
    - if devise_mapping.confirmable? && resource.pending_reconfirmation?
      %p
        Currently waiting confirmation for: #{resource.unconfirmed_email}


    .formBlock
      %h3 If you want to change the password, enter the new one and confirm it again in the second field
      = f.input :password, label: "New passsword", autocomplete: "off", hint: "leave it blank if you don't want to change it", required: false
      = f.input :password_confirmation, label: "New password again", hint: "to confirm it and make sure you didn't make any mistakes)", required: false

      - if gauth_enabled_user?
        %p.twoFactorAuth.green
          = image_tag "sidebar_icons/two_factor_auth.png"
          You have two factor authentication already <b>enabled</b>. Would you like to #{ link_to "disable it?", user_displayqr_path }
      - else
        %p.twoFactorAuth.red
          = image_tag "sidebar_icons/two_factor_auth.png"
          It is highly recommended to #{ link_to "have two factor authentication", user_displayqr_path } enabled.

    %p
      %h3 
      = f.input :current_password, label: "To save changes, you must enter the current password", required: true
  .form-actions
    = f.button :submit, "Save changes"

/Unhappy? #{link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete}
