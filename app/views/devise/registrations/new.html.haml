- @page_title = "Sign up"

.page.registration.new

  .formBlock

    %h2.onDark SIGN UP and start accepting Bitcoin

    = simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      .form-inputs
        = f.input :email, required: true, autofocus: true
        = f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @validatable)
        = f.input :password_confirmation, required: true
        = f.input :name
        = f.input :tos_agreement, required: true, inline_label: "I agree to the #{link_to('Terms Of Service', tos_path, target: '_blank')}".html_safe, as: :boolean
      .form-actions
        = f.button :submit, "Sign up", class: 'onDark'

  = render "devise/shared/links"
