- html = {id: provider_class.type}
- html[:style] = "display:none;" if hidden
- model = provider || provider_class.new
= simple_form_for(model, url: model.persisted? ? address_provider_path(model)  : address_providers_path, html: html) do |f|
  %input{type: 'hidden', name: 'type', value: provider_class.type}
  -#= f.input :name

  %h3 Fill in verification info
  %table
    %tr
      %td= f.input :first_name
      %td= f.input :last_name
    %tr
      %td= f.input :address
      %td= f.input :postal_code, input_html: {style: 'width: 100px;'}
    %tr
      %td= f.input :city
      %td= f.input :country_code, label: "Country"

  = f.simple_fields_for :files do |d|
    %table
      %tr
        %td= d.input :'gov-id-front', as: :file, label: I18n.t('address_providers.cashila.gov-id-front')
        %td= d.input :'gov-id-back', as: :file, label: I18n.t('address_providers.cashila.gov-id-back')
        %td= d.input :residence, as: :file, label: I18n.t('address_providers.cashila.residence')

  %h3 Fill in bank account info
  = f.input :recipient_name
  %table
    %tr
      %td= f.input :recipient_address
      %td= f.input :recipient_postal_code, input_html: {style: 'width: 100px;'}
    %tr
      %td= f.input :recipient_city
      %td= f.input :recipient_country_code, label: "Recipient country"
    %tr
      %td= f.input :recipient_bic, label: 'BIC'
      %td= f.input :recipient_iban, label: 'IBAN'
  = f.submit 'Submit'
