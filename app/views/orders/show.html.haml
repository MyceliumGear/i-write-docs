.page.orders.show

  %h2 Order ##{@order.keychain_id}, for #{link_to @gateway.name, @gateway}
  
  %table

    %tr
      %th Amount (BTC)
      %td= @order.amount_in_btc(as: :string)

    %tr
      %th Bitcoin payment address
      %td= @order.address

    %tr
      %th Transaction id
      %td= @order.tid

    %tr
      %th Status
      %td= StraightServer::Order::STATUSES.invert[@order.status]

    - unless @gateway.straight_gateway.default_currency.upcase == 'BTC'
      %tr
        %th Exhange rates
        %td
          At the time of purchase:
          %b= "#{@gateway.straight_gateway.current_exchange_rate} #{@gateway.straight_gateway.default_currency.upcase}"
          ,
          Current:
          %b= "#{@gateway.straight_gateway.current_exchange_rate} #{@gateway.straight_gateway.default_currency.upcase}"

    %tr
      %th Data
      %td= @order.data.to_json.to_s

    %tr
      %th Callback response
      %td= @order.callback_response

    %tr
      %th Created at
      %td= @order.created_at
