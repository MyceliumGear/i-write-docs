- btc_only_fields_style = @gateway.convert_currency_to == 'BTC' ? '' : 'display: none;'
= simple_form_for(@gateway) do |f|
  = hidden_field_tag(:referer, request.referer)

  - if @current_user.address_providers.count == 0
    %p
      = I18n.t('gateways.form.tip', path: new_address_provider_path).html_safe
  = f.input :name
  = f.input :allow_links
  = f.input :confirmations_required, as: :select, collection: (0..6), priority: 0
  = f.input :callback_url
  = f.input :orders_expiration_period
  = f.input :after_payment_redirect_to, as: :string
  = f.input :auto_redirect
  = f.input :active
  - if I18n.available_locales.many?
    = f.input :locale do
      = f.select :locale, I18n.available_locales.map { |l| [l.to_s, l.to_s]}, include_blank: true

  .formBlock
    %h3= I18n.t("gateways.form.currency_conversion_options")
    = f.input :default_currency, as: :select, collection: ['BTC', 'USD', 'EUR'], priority: [ "USD" ]
    = f.input :convert_currency_to, disabled: !@gateway.new_record?, as: :select, collection: [['BTC', 'BTC'], *user_address_providers], priority: ['BTC'], hint: I18n.t("simple_form.hints.gateway.convert_currency_to", url: new_address_provider_path).html_safe
    %label
      = I18n.t("gateways.form.rate_provider_1")
      = select_tag "exchange_rate_adapter_name_1", options_for_select(@gateway.available_exchange_rate_adapter_names, @gateway.exchange_rate_adapter_names[0])
    %label
      = I18n.t("gateways.form.rate_provider_2")
      = select_tag "exchange_rate_adapter_name_2", options_for_select(@gateway.available_exchange_rate_adapter_names, @gateway.exchange_rate_adapter_names[1])
    %label
      = I18n.t("gateways.form.rate_provider_3")
      = select_tag "exchange_rate_adapter_name_3", options_for_select(@gateway.available_exchange_rate_adapter_names, @gateway.exchange_rate_adapter_names[2])

    %span.hint= I18n.t("gateways.form.hint")
    = f.input :exchange_rate_adapter_names, as: :hidden

  .formBlock.btc-only-fields{style: btc_only_fields_style}
    = f.input :pubkey, disabled: !@gateway.new_record?
    %p.moreFieldInfo
      = image_tag "watch_icon.png", class: 'inlineIcon'
      = I18n.t("gateways.form.more_info", electrum_url: link_to(link_to(I18n.t("gateways.form.electrum_wallet"), "https://www.youtube.com/watch?v=2E0cwY_M2D4", target: '_blank')), mycelium_wallet_url: link_to(I18n.t("gateways.form.mycelium_wallet"), "https://www.youtube.com/watch?v=-CN_I8vfEL4", target: '_blank')).html_safe
      %br/
    = f.input :address_derivation_scheme, as: :select, collection: [["m/0/n - Mycelium wallet Android, Electrum, myTREZOR", "m/0/n"], ["n â€” Mycelium wallet iOS", "n"]], value_method: :last, label_method: :first
    
  .formBlock.btc-only-fields{style: btc_only_fields_style}
    %h3= I18n.t("gateways.form.testnet_settings")
    = f.input :test_pubkey
    = f.input :test_mode

  .formBlock
    %h3= I18n.t("gateways.form.additional_info_about_the_merchant")
    %p.description= I18n.t("gateways.form.all_fields_are_optional")
    = f.input :description
    = f.input :merchant_url
    = f.input :country
    = f.input :region
    = f.input :city

  - unless @gateway.new_record?
    = f.input :regenerate_secret, as: :boolean

  - if @gateway.has_widget?
    = f.input :receive_payments_notifications, label: I18n.t("gateways.form.send_notifications_about_new_payments_to_my_email")

  = f.submit
